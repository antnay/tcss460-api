{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@controllers/*": ["controllers/*"],
      "@controllers": ["controllers"],
      "@routes/*": ["routes/*"],
      "@routes": ["routes"],
      "@middleware/*": ["core/middleware/*"],
      "@middleware": ["core/middleware"],
      "@utils/*": ["core/utils/*"],
      "@utils": ["core/utils"],
      "@models/*": ["core/models/*"],
      "@models": ["core/models"],
      "@db": ["core/utils/database"],
      "@/types": ["types"],
      "@/types/*": ["types/*"]
    }
  },
  "include": ["src/**/*", "src/app.ts"],
  "exclude": ["node_modules", "dist", "coverage"]
}